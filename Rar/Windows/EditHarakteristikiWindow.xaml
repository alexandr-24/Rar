<Window x:Class="Rar.Windows.EditHarakteristikiWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rar.Windows"
        mc:Ignorable="d"
        WindowStyle="None"
        Background="Transparent"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Height="500" Width="800"
        Title="EditHarakteristikiWindow">
    <Border Background="White" CornerRadius="25">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="75"/>
            </Grid.RowDefinitions>

            <Thumb x:Name="headerThumb"
                Grid.RowSpan="6"
                Grid.ColumnSpan="2"
                Opacity="0"
                Panel.ZIndex="-2"
                Background="{x:Null}"
                Foreground="{x:Null}"
                DragDelta="headerThumb_DragDelta"/>
            
            <TextBlock Text="Характеристики"
                       Grid.Row="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="24"
                       FontFamily="Bahnschrift Condensed"
                       Foreground="Black"/>

            <Button x:Name="AddButton"
                    Click="AddButton_Click"
                    Style="{StaticResource MenuButton}"
                    Grid.Row="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="10,5"
                    Width="40"
                    Height="40"
                    FontSize="32"
                    FontFamily="Bahnschrift Condensed">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
                <StackPanel>
                    <Image Source="/Pictures/control/add.png" StretchDirection="DownOnly"/>
                </StackPanel>
            </Button>

            <Button x:Name="CloseButton"
                    Click="CloseButton_Click"
                    Style="{StaticResource MenuButton}"
                    Grid.Row="0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="10,5"
                    Width="40"
                    Height="40"
                    FontSize="32"
                    FontFamily="Bahnschrift Condensed">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
                <StackPanel>
                    <Image Source="/Pictures/control/close.png" StretchDirection="DownOnly"/>
                </StackPanel>
            </Button>
            
            <DataGrid x:Name="DG"
                      Grid.Row="1"
                      Margin="10"
                      FontFamily="Bahnschrift Condensed"
                      FontSize="24"
                      AutoGenerateColumns="False"
                      CanUserAddRows="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Характеристика"
                                        Binding="{Binding Harakteristika}"
                                        Width="1*"/>
                    
                    <DataGridTextColumn Header="Значение"
                                        Binding="{Binding Value}"
                                        Width="1*"/>
                </DataGrid.Columns>
            </DataGrid>

            <Button x:Name="SaveButton"
                Style="{StaticResource MenuButton}"
                Click="SaveButton_Click"
                Grid.Row="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="10,5"
                Width="64"
                Height="64"
                FontSize="32"
                FontFamily="Bahnschrift Condensed">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
                <StackPanel HorizontalAlignment="Center">
                    <Image Source="/Pictures/control/save.png" StretchDirection="DownOnly"/>
                </StackPanel>
            </Button>



        </Grid>
    </Border>
</Window>
